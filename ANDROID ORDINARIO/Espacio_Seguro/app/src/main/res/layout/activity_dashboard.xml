<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:background="#F5F5F5"
    tools:context=".DashboardActivity">



    <!-- Título del Dashboard -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado del Estacionamiento"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="32dp"/>

    <!-- Contenedor principal para las tarjetas de estado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:baselineAligned="false">

        <!-- Tarjeta para 'Disponibles' -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginEnd="8dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disponibles"
                android:textSize="18sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/txtDisponibles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="34sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"/>
        </LinearLayout>

        <!-- Tarjeta para 'Ocupados' -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginStart="8dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ocupados"
                android:textSize="18sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/txtOcupados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="34sp"
                android:textStyle="bold"
                android:textColor="#F44336"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Contenedor secundario para las otras tarjetas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <!-- Tarjeta para 'Total Espacios' -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginEnd="8dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Espacios"
                android:textSize="18sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/txtTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="34sp"
                android:textStyle="bold"
                android:textColor="#2196F3"/>
        </LinearLayout>

        <!-- Tarjeta para 'Temporales' -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginStart="8dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temporales"
                android:textSize="18sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/txtTemporales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="34sp"
                android:textStyle="bold"
                android:textColor="#FF9800"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Contenedor para la tarjeta 'Discapacidad' centrado -->
    <LinearLayout
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <!-- Tarjeta para 'Discapacidad' -->
        <LinearLayout
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discapacidad"
                android:textColor="#666666"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtDiscapacidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#003F87"
                android:textSize="34sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


    <!-- Botón de Nuevo Vehículo -->
    <Button
        android:id="@+id/btnNuevoVehiculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nuevo Vehiculo"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:textSize="16sp" />

    <!-- Contenedor para los botones Entrada y Salida -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <!-- Botón de Entrada -->
        <Button
            android:id="@+id/btnEntrada"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Entrada"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="4dp"
            android:padding="12dp"
            android:textSize="16sp"/>

        <!-- Botón de Salida -->
        <Button
            android:id="@+id/btnSalida"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Salida"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"
            android:layout_marginStart="4dp"
            android:padding="12dp"
            android:textSize="16sp"/>

    </LinearLayout>

    <!-- ===== SECCIÓN DE BOTONES FINALES AÑADIDA ===== -->


    <!-- Botón Ver Vehículos -->
    <Button
        android:id="@+id/btnVerVehiculos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver vehiculos"
        android:backgroundTint="#ffffff"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:textSize="16sp"/>

    <!-- Botón Cerrar Sesión -->
    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FFFFFF"
        android:padding="12dp"
        android:text="Cerrar sesión"
        android:textColor="#FF0000"
        android:textSize="16sp" />

</LinearLayout>
