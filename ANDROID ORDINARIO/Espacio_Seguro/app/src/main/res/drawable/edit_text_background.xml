<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Define un color de fondo sólido (puedes cambiarlo) -->
    <solid android:color="#FFFFFF" />

    <!-- Define un borde para el campo de texto -->
    <stroke
        android:width="1dp"
        android:color="#A9A9A9" /> <!-- Un color gris para el borde -->

    <!-- Define qué tan redondeadas serán las esquinas -->
    <corners android:radius="8dp" />

</shape>
    